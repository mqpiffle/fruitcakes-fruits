{% layout 'layout.liquid' %}
{% block content %}
  {% if fruits.length > 0 %}

    <div class="container-md">
      <h2>All Fruit</h2>
      <div class="row">
        {% for fruit in fruits %}
          <div class="card m-2" style="width: 18rem;">
            <h3 class="card-header">{{ fruit.name }}</h5>
            <div class="card-body">
              <h5 class="card-title">
                {% if fruit.readyToEat %}
                  Ripe
                {% else %}
                  Not Ripe
                {% endif %}
              </h5>
              <p class="card-text">The color of this {{ fruit.name }} is {{ fruit.color }}a</p>
              <div class="colorBox mb-2" style="background-color:
                                                {{ fruit.color }}
                                                "></div>
              <a href="/fruits/{{fruit.id}}" class="btn btn-info">View {{ fruit.name }}</a>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  {% else %}
    <div class="container-md">
      <h2>No fruits yet... Go create some</h2>
    </div>
  {% endif %}



{% endblock %}